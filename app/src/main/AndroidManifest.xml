<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teampruli.manhattanproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.teampruli.manhattanproject.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_jugadores"></activity>
        <activity
            android:name=".NewPlayerActivity"
            android:label="@string/title_activity_nuevo_jugador"></activity>
        <activity
            android:name=".CardsActivity"
            android:label="@string/title_activity_tarjetas"></activity>
        <activity
            android:name=".NewCard"
            android:label="@string/title_activity_nueva_tarjeta"></activity>
        <activity
            android:name=".ViewPlayer"
            android:label="@string/title_activity_ver_jugador"></activity>
        <activity
            android:name=".NewGameActivity"
            android:label="@string/title_activity_nueva_partida"></activity>
        <activity
            android:name=".TeamsActivity"
            android:label="@string/title_activity_equipos"></activity>
        <activity
            android:name=".CreateTeamsActivity"
            android:label="@string/title_activity_formar_equipos"></activity>
        <activity
            android:name=".SavedGames"
            android:label="@string/title_activity_partidas_guardadas"></activity>
        <activity
            android:name=".GameSummaryActivity"
            android:label="@string/title_activity_resumen_partida"></activity>
    </application>

</manifest>
