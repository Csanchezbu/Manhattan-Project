        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_players" />
        <activity
            android:name=".NewPlayerActivity"
            android:label="@string/title_activity_new_player" />
        <activity
            android:name=".CardsActivity"
            android:label="@string/title_activity_cards" />
        <activity
            android:name=".NewCardActivity"
            android:label="@string/title_activity_new_card" />
        <activity
            android:name=".ViewPlayerActivity"
            android:label="@string/title_activity_view_player" />
        <activity
            android:name=".ViewCardActivity"
            android:label="@string/title_activity_view_card" />
        <activity
            android:name=".SelectPlayersActivity"
            android:label="@string/title_activity_new_game" />
        <activity
            android:name=".TeamsActivity"
            android:label="@string/title_activity_teams" />
        <activity
            android:name=".CreateTeamsActivity"
            android:label="@string/title_activity_create_teams" />
        <activity
            android:name=".SavedGamesActivity"
            android:label="@string/title_activity_saved_games" />
        <activity
            android:name=".GameSummaryActivity"
            android:label="@string/title_activity_game_summary" />
        <activity
            android:name=".StartGameActivity"
            android:label="@string/title_activity_start_game" />
        <activity
            android:name=".NextTurnActivity"
            android:label="@string/title_activity_next_turn" />
        <activity
            android:name=".RoundActivity"
            android:label="@string/title_activity_round" />
        <activity
            android:name=".TurnEndActivity"
            android:label="@string/title_activity_turn_end"></activity>
