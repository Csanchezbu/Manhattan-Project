<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teampruli.manhattanproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.teampruli.manhattanproject.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_players"></activity>
        <activity
            android:name=".NewPlayerActivity"
            android:label="@string/title_activity_new_player"></activity>
        <activity
            android:name=".CardsActivity"
            android:label="@string/title_activity_cards"></activity>
        <activity
            android:name=".NewCard"
            android:label="@string/title_activity_new_card"></activity>
        <activity
            android:name=".ViewPlayer"
            android:label="@string/title_activity_view_player"></activity>
        <activity
            android:name=".NewGameActivity"
            android:label="@string/title_activity_new_game"></activity>
        <activity
            android:name=".TeamsActivity"
            android:label="@string/title_activity_teams"></activity>
        <activity
            android:name=".CreateTeamsActivity"
            android:label="@string/title_activity_create_teams"></activity>
        <activity
            android:name=".SavedGames"
            android:label="@string/title_activity_saved_games"></activity>
        <activity
            android:name=".GameSummaryActivity"
            android:label="@string/title_activity_game_summary"></activity>
    </application>

</manifest>
